<h1>Editind Book</h1>

<%= form_with model:@book do |f| %>

  <div>
    <%= f.label :title %></br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %></br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<a href="<%= book_path(@book.id) %>">Show</a> | <a href="<%= books_path %>">Back</a>